<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="android.app.maryam_tp2.ui.DeleteFragment"
    android:background="@drawable/crop"
    android:id="@+id/frag_delete"
        >
=

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="200dp"

            android:layout_alignParentTop="true"
            android:layout_marginTop="16dp"
            app:srcCompat="@drawable/ic_contact"
            tools:srcCompat="@drawable/contact_android" />

        <EditText
            android:id="@+id/nom"
            style="@style/Widget.AppCompat.EditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="78dp"
            android:layout_marginTop="101dp"
            android:layout_marginEnd="74dp"
            android:drawableLeft="@drawable/ic_contact"
            android:ems="10"
            android:hint="Nom du contact Ã  supprimer"
            android:inputType="textPersonName"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <Button
            android:id="@+id/nav_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nom"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="73dp"
            android:layout_marginTop="88dp"
            android:layout_marginEnd="85dp"
            android:background="@color/black"
            android:backgroundTint="#0E4683"
            android:fontFamily="serif"
            android:text="Supprimer ce contact"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/white"
            android:textSize="24dp"
            android:textStyle="bold"
            app:icon="@drawable/ic_delete2" />

        <Button
            android:id="@+id/nav_delete2"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_below="@+id/nav_delete"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="31dp"
            android:layout_marginTop="97dp"
            android:layout_marginEnd="34dp"
            android:layout_marginBottom="84dp"
            android:background="@color/design_default_color_error"
            android:backgroundTint="#0E4683"
            android:fallbackLineSpacing="true"
            android:fontFamily="serif"
            android:hapticFeedbackEnabled="false"
            android:text="Supprimer  tous les contacts"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/white"
            android:textSize="24dp"
            android:textStyle="bold"
            app:icon="@drawable/ic_delete" />
    </RelativeLayout>
</FrameLayout>





